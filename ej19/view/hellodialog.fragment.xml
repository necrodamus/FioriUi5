<core:FragmentDefinition xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog class="formatDialog" id="helloDialog" title="Hello {/recipient/name}">
      <content>
         <core:Icon src="sap-icon://hello-world" size="8rem" class="sapUiMediumMargin"/>
      </content>
      <beginButton>
         <Button icon= "sap-icon://close-command-field" text="{i18n>dialogCloseButtonText}" press=".onCloseDialog"/>
      </beginButton>
   </Dialog>
</core:FragmentDefinition>